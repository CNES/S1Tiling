# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Apply to all code files
[*]
# A newline ending every file
insert_final_newline = true

# Set default charset
charset = utf-8

# 4 space indentation
indent_style = space
indent_size = 4

# Various options
trim_trailing_whitespace = true
max_line_length = 79

[*.py]
indent_size = 4
max_line_length = 150

[Makefile]
indent_style = tab

[*.vim]
max_line_length = 150
